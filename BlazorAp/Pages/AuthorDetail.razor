<section>
    <div class="col-12 row">
        <h5 class="col-12 row" style="font-weight:bold">
            @AuthorDetails.FirstName @AuthorDetails.LastName
        </h5>
        <h6 class="col-12 row">Ph: @AuthorDetails.Phonenumber</h6>
        <h6 class="col-12 row">City: @AuthorDetails.City</h6>
    </div>

    <div class="col-12 row">@authorService.GetCreatedDate()</div>
    <div class="col-12 row">version : @authorService.GetVersion()</div>
</section>

@code {

    [Parameter]
    public int AuthorId { get; set; }

    public Author AuthorDetails { get; set; }
    //public AuthorService authorService { get; set; }

    protected override void OnInitialized()
    {
        //authorService = new AuthorService();
        AuthorDetails = authorService.GetAuthorById(AuthorId);
    }
}
